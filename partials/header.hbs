<script>
  // Function to toggle both the button animation and the sidebar
  function toggleNav(x) {
    x.classList.toggle("change"); // Toggle the hamburger button animation
    var nav = document.getElementById("mySidenav");

    if (nav.classList.contains("open")) {
      // If the menu is open, hide the links first, then close the sidebar
      nav.classList.remove("show-links");
      setTimeout(function() {
        nav.classList.remove("open");
      }, 200); // Wait for the links to fade out before closing the sidebar
    } else {
      // If the menu is closed, open the sidebar first, then show the links
      nav.classList.add("open");
      setTimeout(function() {
        nav.classList.add("show-links");
      }, 200); // Wait for the sidebar to fully open before showing the links
    }
  }

  // Reset sidebar and menu button to initial state when leaving the page
  window.addEventListener("beforeunload", function() {
    var nav = document.getElementById("mySidenav");
    nav.classList.remove("open", "show-links"); // Close the sidebar
    var menuButton = document.querySelector(".menu");
    menuButton.classList.remove("change"); // Reset the hamburger button
  });
</script>
